{
	"$schema": "https://biomejs.dev/schemas/1.5.2/schema.json",
	"organizeImports": {
		"enabled": false
	},
	"linter": {
		"enabled": true,
		"rules": {
			"all": true,
			"suspicious": {
				"noExplicitAny": "off",
				"noConfusingVoidType": "off"
			},
			"style": {
				"noNonNullAssertion": "off",
				"noParameterAssign": "off",
				"noInferrableTypes": "off"
			},
			"complexity": {
				"noBannedTypes": "off",
				"noForEach": "off",
				"noUselessConstructor": "off"
			},
			"nursery": {
				"useImportType": "error",
				"noUselessTernary": "error",
				"noEmptyBlockStatements": "off"
			}
		}
	},
	"files": {
		"ignoreUnknown": true,
		"ignore": [
			".vscode",
			"node_modules",
			"dist",
			"src/env.d.ts"
		]
	},
	"json": {
		"formatter": {
			"enabled": true,
			"indentWidth": 4,
			"lineWidth": 80
		}
	},
	"formatter": {
		"enabled": true,
		"indentWidth": 4,
		"indentStyle": "tab",
		"lineWidth": 140,
		"lineEnding": "crlf",
		"formatWithErrors": true
	},
	"javascript": {
		"formatter": {
			"quoteStyle": "double",
			"arrowParentheses": "always",
			"bracketSameLine": true,
			"semicolons": "always"
		}
	}
}
