{
  "compilerOptions": {
    "target": "ESNext",
    "module": "NodeNext",
    "lib": ["ESNext"],
    "rootDir": "./src",
    "outDir": "./dist",
    "strict": true,
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "esModuleInterop": true,
    "moduleResolution": "NodeNext",
    "paths": {
      "#galaxy/types": ["./src/structures/lib/types/index.ts"],
      "#galaxy/errors": ["./src/structures/util/Errors.ts"],
      "#galaxy/client": ["./src/structures/client/Galaxy.ts"],
      "#galaxy/builders": ["./src/structures/lib/classes/index.ts"],
      "#galaxy/listeners": ["./src/structures/util/listeners/index.ts"],
      "#galaxy/utils/*": ["./src/structures/util/*"],
    }
  },
  "exclude": ["node_modules"],
  "include": ["./src/**/*"]
}
